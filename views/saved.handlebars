<div class="text-center p-5"id="articleRow">
    {{#each data}}
    {{#if saved}}
    <div class="row rounded bg-white my-3 p-3" style="border-color:blue;border-width:thick;border-style:solid;box-shadow:black 3px 3px 3px 3px;">
        <div class="col-lg-3">
           <img width="300px"height="200px"class="img-thumbnail"src="{{this.image}}" alt="">
        </div>
        <div class="col-lg-8 mx-4">
        <h3><a style="word-wrap:normal;text-decoration:underline;" href="{{this.link}}">{{this.title}}</a></h3>
        <p>{{this.paragraph}}</p>
        <button type="button"id="addNote"data-id="{{this._id}}"data-toggle="modal" data-target="#exampleModal" class="btn btn-primary my-2">Add Note</button>
        <button type="button"id="buttonDelete"data-id="{{this._id}}" class="buttonDelete btn btn-danger my-2">Delete Article</button>
        </div>
    </div>
    {{/if}}
    {{/each}}
</div>
<div class="modal" id="exampleModal"tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Comments about the article</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="comments">
        </div>
      </div>
     
         <div class="form-group p-5">
            <label for="message-text" class="col-form-label">Message:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" data-id={{this._id}} id="addNote" class="btn btn-primary">Add Note</button>
      </div>
    </div>
  </div>
</div>