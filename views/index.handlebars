<div class="text-center p-5"id="articleRow">
    {{#each data}}
    <div class="row rounded bg-white my-3 p-3" style="border-color:blue;border-width:thick;border-style:solid;box-shadow:black 3px 3px 3px 3px;">
        <div class="col-lg-3">
           <img class="img-thumbnail"src="{{this.image}}" alt="">
        </div>
        <div class="col-lg-8 mx-4">
        <h3><a style="word-wrap:normal;text-decoration:underline;" href="https://www.ign.com/{{this.link}}">{{this.title}}</a></h3>
        <button type="button"data-id="{{this._id}}" class="btn btn-primary my-5">Save Article</button>
        </div>
    </div>
    {{/each}}
</div>